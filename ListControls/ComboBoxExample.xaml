<Window x:Class="ListControls.ComboBoxExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListControls"
        mc:Ignorable="d"
        Title="ComboBoxExample" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox Name="cmbColors" IsEditable="True" SelectionChanged="cmbColors_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="{Binding Name}" Width="16" Height="16" Margin="0,2,5,2" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <WrapPanel Margin="15" HorizontalAlignment="Center">
                <Button Name="btnPrevious" Click="btnPrevious_Click" Margin="5,0" Width="55">Previous</Button>
                <Button Name="btnNext" Click="btnNext_Click" Margin="5,0" Width="55">Next</Button>
                <Button Name="btnBlue" Click="btnBlue_Click" Width="55">Blue</Button>
            </WrapPanel>
        </StackPanel>
        </Grid>
</Window>
