<Window x:Class="MiscControls.ProgressBarControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiscControls"
        mc:Ignorable="d"
        Title="ProgressBarControl" Height="450" Width="800"
        ContentRendered="Window_ContentRendered">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <Grid>
            <ProgressBar Minimum="0" Maximum="100" Height="20" Name="pbStatus"/>
            <TextBlock Text="{Binding ElementName=pbStatus , Path=Value , StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <ProgressBar Minimum="0" Maximum="100" Height="20" Name="pbIntermidiantStatus" IsIndeterminate="True" Margin="0,20"/>
    </StackPanel>
</Window>
