<Window x:Class="MiscControls.DatePickerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiscControls"
        mc:Ignorable="d"
        Title="DatePickerControl" Height="250" Width="300">
    <DatePicker Name="dp1">
        <DatePicker.BlackoutDates>
            <CalendarDateRange Start="2021-05-24" End="2021-05-30" />
            <CalendarDateRange Start="2019-04-22" End="2019-04-28" />
        </DatePicker.BlackoutDates>
    </DatePicker>
</Window>
