<Window x:Class="DataBinding.BindingToClassProp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="BindingToClassProp" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label>Name:</Label>
        <TextBlock Text="{Binding Person.FirstName}" />
        <Label>SecondName:</Label>
        <TextBlock Text="{Binding Person.SecondName}" />
        <Label>Full Name:</Label>
        <TextBlock Text="{Binding Person.FullName}" />
    </StackPanel>
</Window>
