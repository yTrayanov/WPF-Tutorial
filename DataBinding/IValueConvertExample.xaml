<Window x:Class="DataBinding.IValueConvertExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="IValueConvertExample" Height="450" Width="800">
    <Window.Resources>
        <local:YesNoBooleanConverter x:Key="YesNoBooleanConverter" />
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBox Name="txtValue" />
        <WrapPanel Margin="0,10">
            <TextBlock Text="Current calue is: " />
            <TextBlock Text="{Binding ElementName=txtValue, Path=Text , Converter={StaticResource YesNoBooleanConverter}}" />
        </WrapPanel>
        <CheckBox IsChecked="{Binding ElementName=txtValue, Path=Text, Converter={StaticResource YesNoBooleanConverter}}" Content="Yes" />
    </StackPanel>
</Window>
