<Window x:Class="TimerMultiTreadBackGroundWorker.BackGroundWorkerExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerMultiTreadBackGroundWorker"
        mc:Ignorable="d"
        Title="BackGroundWorkerExample" Height="450" Width="800">
    <DockPanel Margin="10" >
        <DockPanel DockPanel.Dock="Top">
            <Button Name="btnDoSyncCalculation" Click="btnDoSyncCalculation_Click" DockPanel.Dock="Left" HorizontalAlignment="Left">Synchronous (same thread)</Button>
            <Button Name="btnDoAsyncCalculation" Click="btnDoAsyncCalculation_Click" DockPanel.Dock="Right" HorizontalAlignment="Right">Async (worker thread)</Button>
            <Button Name="btnStart" Click="btnStart_Click" Width="250">Start</Button>
            <Button Name="btnCancelAsync" Click="btnCancelAsync_Click">Cancel</Button>
        </DockPanel>
        <ProgressBar DockPanel.Dock="Bottom" Height="18" Name="pbCalsulationProgress" />
        <ListBox Name="lbResults" Margin="0,10" />
    </DockPanel>
</Window>
